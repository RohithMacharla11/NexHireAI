{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["candidate", "recruiter", "admin"] },
        "avatarUrl": { "type": "string", "format": "uri" },
        "linkedinUrl": { "type": "string", "format": "uri" },
        "githubUrl": { "type": "string", "format": "uri" },
        "portfolioUrl": { "type": "string", "format": "uri" },
        "resumeUrl": { "type": "string", "format": "uri" },
        "xp": { "type": "number" },
        "badges": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["name", "email", "role"]
    },
    "Role": {
      "title": "Assessment Role",
      "description": "Defines a professional role and its associated skills for assessments.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "subSkills": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["name", "subSkills"]
    },
    "Question": {
      "title": "Assessment Question",
      "description": "A single question within a skill.",
      "type": "object",
      "properties": {
        "questionText": { "type": "string" },
        "type": { "type": "string", "enum": ["mcq", "short", "coding", "scenario", "debugging"] },
        "options": { "type": "array", "items": { "type": "string" } },
        "correctAnswer": { "type": "string" },
        "testCases": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "input": { "type": "string" },
              "expectedOutput": { "type": "string" }
            }
          }
        },
        "difficulty": { "type": "string", "enum": ["Easy", "Medium", "Hard"] },
        "skill": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "aiQualityScore": { "type": "number" },
        "lastReviewedBy": { "type": "string" },
        "createdBy": { "type": "string" },
        "createdAt": { "type": "number" }
      },
      "required": ["questionText", "type", "difficulty", "skill"]
    },
    "AssessmentTemplate": {
      "title": "Assessment Template",
      "description": "A configurable template for generating assessments.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "role": { "type": "string" },
        "skills": { "type": "array", "items": { "type": "string" } },
        "questionCount": { "type": "number" },
        "duration": { "type": "number" },
        "difficultyMix": {
          "type": "object",
          "properties": {
            "easy": { "type": "number" },
            "medium": { "type": "number" },
            "hard": { "type": "number" }
          }
        },
        "questionIds": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "string", "enum": ["active", "draft"] },
        "version": { "type": "string" },
        "createdBy": { "type": "string" },
        "createdAt": { "type": "number" }
      },
      "required": ["name", "role", "status", "questionCount"]
    },
    "AssessmentAttempt": {
      "title": "User Assessment Attempt",
      "description": "Records a user's attempt at an assessment.",
      "type": "object",
      "properties": {
        "roleId": { "type": "string" },
        "assessmentId": { "type": "string" },
        "startedAt": { "type": "number" },
        "submittedAt": { "type": "number" },
        "responses": {
          "type": "array",
          "items": { "$ref": "#/backend/entities/UserResponse" }
        },
        "finalScore": { "type": "number" },
        "skillScores": { "type": "object" },
        "aiFeedback": { "type": "string" }
      },
      "required": ["roleId", "startedAt", "assessmentId"]
    },
    "UserResponse": {
      "title": "User Response",
      "description": "A user's single response within an assessment.",
      "type": "object",
      "properties": {
        "questionId": { "type": "string" },
        "skill": { "type": "string" },
        "difficulty": { "type": "string", "enum": ["Easy", "Medium", "Hard"] },
        "answer": { "type": "string" },
        "code": { "type": "string" },
        "timeTaken": { "type": "number" },
        "isCorrect": { "type": "boolean" },
        "testCasesPassed": { "type": "number" },
        "totalTestCases": { "type": "number" }
      },
      "required": ["questionId", "timeTaken", "difficulty"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "Stores user profile information."
    },
    "/users/{userId}/assessments/{assessmentId}": {
      "schema": { "$ref": "#/backend/entities/AssessmentAttempt" },
      "description": "Stores a user's individual assessment attempts."
    },
    "/roles/{roleId}": {
      "schema": { "$ref": "#/backend/entities/Role" },
      "description": "Stores the master list of professional roles and their sub-skills."
    },
    "/questionBank/{questionId}": {
      "schema": { "$ref": "#/backend/entities/Question" },
      "description": "Centralized repository for all assessment questions."
    },
    "/assessments/{assessmentId}": {
      "schema": { "$ref": "#/backend/entities/AssessmentTemplate" },
      "description": "Stores assessment templates created by admins."
    }
  }
}
